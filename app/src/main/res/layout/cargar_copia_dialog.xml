<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cargarCopiaSeguridadLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:gravity="center_horizontal"
        android:text="Carga una copia de Seguridad"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9b"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:gravity="center_horizontal"
        android:text="de la memoria interna"
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_copiaRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="4" />

    <TextView
        android:id="@+id/textView102"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="O selecciona archivo Externo"
        android:textSize="24sp" />

    <Button
        android:id="@+id/seleccionarArchivoCopiaBTN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:text="Seleccionar" />

    <TextView
        android:id="@+id/textView1202"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Archivo Seleccionado:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/archivoSeleccionadoTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:gravity="center_horizontal"
        android:text="----"
        android:textSize="24sp" />

    <Button
        android:id="@+id/restaurarCopiaBTN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:text="Restaurar copia Seleccionada" />

    <TextView
        android:id="@+id/textView12302"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:gravity="center_horizontal"
        android:text="¡Ojo! Al restaurar la copia todos los datos actuales de la aplicación se eliminarán y no será posible deshacer"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp" />

    <Space
        android:layout_width="600dp"
        android:layout_height="0dp"
        android:layout_weight="0" />

</LinearLayout>